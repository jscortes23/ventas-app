<div class="row">
    {{#each ventas}}
    <div class="col-sm-3">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} <a
                        href="/ventas/edit/{{_id}}"><i class="bi bi-pencil-square"></i></a> </h4>
            </div>
            <div class="card-body">
                <p class="card-text">{{description}}</p>
                {{!-- Usar el metodo delete --}}
                <form action="/ventas/delete/{{_id}}?_method=delete" method="post">
                    {{!-- Enviar el comando delete --}}
                    <input type="hidden" name="_method" value="delete">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body d-grid">
                <p class="lead">There are not notes yet</p>
                <a href="/ventas/new" class="btn btn-success btn-block">Create one venta</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>