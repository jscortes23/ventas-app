<form action="/users/signup" method="post">
    <h1>Register</h1>
    <div class="mb-3 mt-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" value="{{name}}">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value="{{email}}">
    </div>
    <div class="mb-3">
        <label for="pwd" class="form-label">Password:</label>
        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password" value="{{password}}">
    </div>
    <div class="mb-3">
        <label for="pwd-confirm" class="form-label">Confrim password:</label>
        <input type="password" class="form-control" id="pwd-confirm" placeholder="Enter password" name="confirm_password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>